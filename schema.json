{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "bb-component-SuperTabs",
    "friendlyName": "Super Tabs",
    "description": "A Tabs component for Budibase with Super Power",
    "icon": "Folder2Color",
    "styles": ["padding", "border", "shadow"],
    "hasChildren": true,
    "info": "Turn any Group of compoenents into Tabs ! Made with love ",
    "settings": [
      {
        "type": "select",
        "label": "Direction",
        "key": "direction",
        "options": [
          {
            "label": "Horizontal",
            "value": "horizontal"
          },
          {
            "label": "Vertical",
            "value": "vertical"
          }
        ],
        "defaultValue": "horizontal"
      },
      {
        "type": "select",
        "label": "Size",
        "key": "size",
        "options": [
          {
            "label": "Small",
            "value": "S"
          },
          {
            "label": "Medium",
            "value": "M"
          },
          {
            "label": "Large",
            "value": "L"
          },
          {
            "label": "Extra large",
            "value": "XL"
          }
        ],
        "defaultValue": "M"
      },
      {
        "type": "number",
        "label": "Initial Tab Index",
        "key": "initialTabIndex",
        "info": "Select which tab to have open on screen load",
        "defaultValue": 0,
        "min": 0
      },
      {
        "type": "boolean",
        "label": "Centered",
        "key": "centered",
        "defaultValue": false,
        "dependsOn": { "setting": "direction", "value": "horizontal" }
      },
      {
        "type": "boolean",
        "label": "Quiet",
        "key": "quiet"
      },
      {
        "type": "boolean",
        "label": "Compact",
        "key": "compact"
      },
      {
        "type": "boolean",
        "label": "Emphasized",
        "key": "emphasized"
      },
      {
        "type": "color",
        "label": "Emphasized Color",
        "key": "emphasizedColor",
        "dependsOn": "emphasized"
      },
      {
        "section": true,
        "name": "On Tab Change",
        "settings": [
          {
            "type": "event",
            "key": "onTabChange",
            "context": [
              {
                "label": "Active Tab Name",
                "key": "tabName"
              }
            ]
          }
        ]
      }
    ]
  }
}
